var toggleClass=function(clString,clName){return-1!==clString.indexOf(clName)?clString.replace(clName,""):clString+" "+clName},addClass=function(clString,clName){return-1!==clString.indexOf(clName)?clString:clString+" "+clName},hideClass=function(clString,clName){return-1!==clString.indexOf(clName)?clString.replace(clName,""):clString},getDirectChild=function(node,childClass){for(var children=node.childNodes,nChildren=children.length,result=null,i=0;i<nChildren;i++)if(1===children[i].nodeType&&-1!==children[i].className.indexOf(childClass)){result=children[i];break}return result};